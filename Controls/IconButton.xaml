<Button x:Class="ColdShineSoft.CustomFileCopier.Controls.IconButton"
			xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=PresentationFramework"
		xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
			mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
	<Button.ContentTemplate>
		<DataTemplate>
			<WrapPanel DataContext="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}">
				<iconPacks:PackIconCodicons Kind="{Binding Icon}" />
				<ContentPresenter />
			</WrapPanel>
		</DataTemplate>
	</Button.ContentTemplate>
</Button>